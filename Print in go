package main

import "fmt"

func main() {
    var name, city string
    fmt.Print("Enter your name and city (Scanln): ")
    fmt.Scanln(&name, &city)  // Reads until the first newline
    fmt.Println("Name:", name)
    fmt.Println("City:", city)
}
